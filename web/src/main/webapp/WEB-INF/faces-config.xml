<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
    version="2.1">

    <application>

        <message-bundle>ApplicationMessages</message-bundle>

        <resource-bundle>
            <base-name>SistemaMessages</base-name>
            <var>sis</var>
        </resource-bundle>

        <resource-bundle>
            <base-name>ImportaSIAGASMessages</base-name>
            <var>msg</var>
        </resource-bundle>

        <locale-config>
            <supported-locale>pt_BR</supported-locale>
        </locale-config>
        <locale-config>
            <default-locale>pt_BR</default-locale>
        </locale-config>

    </application>

    <lifecycle>
        <phase-listener>br.com.ctis.framework.faces.controle.MessagesListener</phase-listener>
        <phase-listener>br.gov.ana.importasiagas.infra.AutenticacaoListener</phase-listener>
    </lifecycle>

    <factory>
        <exception-handler-factory>br.com.ctis.framework.faces.excecao.DefaultExceptionHandlerFactory</exception-handler-factory>
    </factory>

    <converter>
        <converter-for-class>java.lang.Enum</converter-for-class>
        <converter-class>javax.faces.convert.EnumConverter</converter-class>
    </converter>

</faces-config>